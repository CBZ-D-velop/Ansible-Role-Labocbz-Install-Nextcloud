##############################
#                            #
# Ansible / Tower managed on #
#                            #
##############################

/var/log/influxdb/*.log
{
    #
    su influxdb influxdb
    daily
    missingok
    rotate 31
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    
    #
    create 0700 influxdb influxdb
    #
    postrotate
        systemctl restart influxdb > /dev/null
    endscript
    #
}