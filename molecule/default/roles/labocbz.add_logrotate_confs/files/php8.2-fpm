##############################
#                            #
# Ansible / Tower managed on #
#                            #
##############################

/var/log/php8.2-fpm.log
{
    #
    su root root
    daily
    missingok
    rotate 31   
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    
    #
    create 0700 root root
    #
    postrotate
        systemctl restart php8.2-fpm > /dev/null
    endscript
    #
}