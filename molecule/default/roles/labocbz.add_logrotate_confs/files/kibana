##############################
#                            #
# Ansible / Tower managed on #
#                            #
##############################

/var/log/kibana/*.log
{
    #
    su kibana kibana
    daily
    missingok
    rotate 31   
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    
    #
    create 0700 kibana kibana
    #
    postrotate
        systemctl restart kibana > /dev/null
    endscript
    #
}