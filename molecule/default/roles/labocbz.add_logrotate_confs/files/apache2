##############################

/var/www/html/*/error.log
/var/www/html/*/access.log
/var/log/apache2/error.log
/var/log/apache2/access.log
{
    #
    su www-data www-data
    daily
    missingok
    rotate 31
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    
    #
    create 775 www-data www-data
    #
    postrotate
        /etc/init.d/apache2 reload > /dev/null
    endscript
    #
}