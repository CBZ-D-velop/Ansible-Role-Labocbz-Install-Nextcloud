##############################

/var/log/haproxy*.log
{
    #
    su haproxy haproxy
    daily
    missingok
    rotate 31
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    
    #
    create 0700 haproxy haproxy
    #
    postrotate
        systemctl restart haproxy > /dev/null
    endscript
    #
}