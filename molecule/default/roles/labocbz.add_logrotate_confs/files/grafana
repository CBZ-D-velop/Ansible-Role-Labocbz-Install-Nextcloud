##############################
#                            #
# Ansible / Tower managed on #
#                            #
##############################

/var/log/grafana/*.log
{
    #
    su grafana grafana
    daily
    missingok
    rotate 31
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    
    #
    create 0700 grafana grafana
    #
    postrotate
        systemctl restart grafana > /dev/null
    endscript
    #
}