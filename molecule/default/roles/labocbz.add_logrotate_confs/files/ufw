/var/log/ufw.log
{
    su root root
    #
    daily
    missingok
    rotate 31   
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    minsize 1M
    #
    postrotate
        invoke-rc.d rsyslog rotate >/dev/null 2>&1 || true
    endscript
    #
}