# no packages own btmp -- we'll rotate it here
/var/log/btmp
{
    su root root
    #
    daily
    missingok
    rotate 31   
    compress
    delaycompress
    notifempty
    sharedscripts
    dateext
    dateformat -%Y-%m-%d
    
    #
    create 0660 root utmp
}